<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FishingTournamentApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FishingTournamentApp"
    xmlns:views="clr-namespace:FishingTournamentApp.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>


        <Tab Title="My Tournaments"
             Icon="trophy.svg">
            <ShellContent
                Title="My Tournaments"
                ContentTemplate="{DataTemplate views:MyTournamentsView}"
                Route="MyTournamentsView"/>
        </Tab>


        <Tab Title="default home">
            <ShellContent
                Title="Home"
                ContentTemplate="{DataTemplate local:MainPage}"
                Route="MainPage" />
        </Tab>

        

        <Tab Title="Profile">
            <ShellContent
                Title="My Profile"
                ContentTemplate="{DataTemplate views:MyProfileView}"
                Route="MyProfileView"/>
        </Tab>
        
    </TabBar>
    

</Shell>
